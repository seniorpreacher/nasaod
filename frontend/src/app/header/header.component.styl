bg_color = #fff

h1
  position fixed
  top 0
  left 0
  width 100%
  margin-top 0
  padding 2rem 0 0.5rem

  text-align center
  font-family 'Montserrat', sans-serif
  font-weight 100
  font-size 1.5rem
  letter-spacing -0.1rem

  color #888
  background bg_color
  box-shadow bg_color 0 0px 50px 40px

  z-index 100

  @media (min-width: 460px)
    font-size 2rem

  @media (min-width: 600px)
    font-size 2.5rem
